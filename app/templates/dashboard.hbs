<div class="container-fluid">
  <div>
    <h1 class="page-header">Dashboard</h1>
    <div class="row placeholder">
      <div class="col-md-4 placeholder">
        <canvas id="week" width="300" height="300">
        <h4>Week Earnings</h4>
        <span class="text-muted">These are the your earnings graphed over the week.</span>
      </div>
      <div class="col-md-4 placeholder">
        <canvas id="quart" width="300" height="300">
        <h4>Quarter Earnings</h4>
        <span class="text-muted">Your earnings graphed over the quarter.</span>
      </div>
      <div class="col-md-4 placeholder">
        <canvas id="year" width="300" height="300">
        <h4>Year Earnings</h4>
        <span class="text-muted">Earnings over the year.</span>
      </div>
    </div>
    <h2 class="sub-header">Your holdings</h2>
    <div class="input-group col-md-4">
    {{input type="search" classBinding=":form-control empty:expand:de-expand" id="inputSSearch" value=symbols placeholder="Enter the stock symbol..."}}

      <span class="input-group-btn">
        <button type="button" {{bind-attr class=":btn :close-icon :btn-default :btn-inline empty:hideded:showed"}} {{action "clear"}}><span class="glyphicon glyphicon-remove-circle"></span></button>
      </span>
    </div>

    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>#</th>
            <th>Cost at Purchase</th>
            <th>Current Cost</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        {{#each filteredSyms}}
        <tr>
          <td>{{name}}</td>
          <td>{{number}}</td>
          <td>{{cost}}</td>
          <td>{{worth}}</td>
          <td>
            <div {{bind-attr class=":input-group :input-group-sm"}} style="width: 102px">
              <input type="number" {{bind-attr id="th"}} class="form-control" value="0">
              <span class="input-group-btn">
                <button class="btn btn-sm btn-primary" {{action 'change' th}}><span class="glyphicon glyphicon-edit"></span></button>
              </span>
            </div><!-- /input-group -->
          </td>
        </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="cw" class="hidden">{{changedWeek}}</div>
<div id="cq" class="hidden">{{changedQuart}}</div>
<div id="cy" class="hidden">{{changedYear}}</div>
