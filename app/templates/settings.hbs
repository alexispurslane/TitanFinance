<div class="container-fluid">
  <div class="row">
    <div class="col-xs-6 col-md-4">
    </div>
    <div class="col-xs-6 col-md-4">
      <h1 class="page-header">Profile Settings</h1>
      <a name="unap"></a>
      <div class="well bs-component">
        <form class="form-horizontal">
          <fieldset>
            <legend>Change Password</legend>
            <div class="form-group">
              <label for="inputPassword" class="col-lg-2 control-label">Your Old Password</label>
              <div class="col-lg-10">
                {{input type="password" class="form-control" id="inputOldPassword" placeholder="Old Password" value=oldPassword}}
              </div>
            </div>
            <div class="form-group">
              <label for="inputPassword" class="col-lg-2 control-label">Password</label>
              <div class="col-lg-10">
                {{input type="password" class="form-control" id="inputPassword" placeholder="Password" value=password}}
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <button class="btn btn-default" {{action 'cancel'}}>Cancel</button>
                <button type="submit" class="btn btn-primary" {{action 'ok'}}>Change</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <h1 class="page-header text-danger" style="font-variant: small-caps;">Danger Zone</h1>
      <a name="unap"></a>
      <div class="well bs-component">
        <form class="form-horizontal">
          <fieldset>
            <div class="form-group">
              <a class="btn btn-danger btn-lg btn-block" {{action 'sell'}}>Sell Everything</a>
              <a class="btn btn-danger btn-lg btn-block" {{action 'delete'}}>Delete Account</a>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
